<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tcc.com.br.tcc">

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/img_icone_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/img_icone_app_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.sms.ActEnviarMensagemSMS"></activity>
        <activity android:name=".ui.ActEstatisticas" />
        <activity android:name=".ui.CadastroAgenda" />
        <activity android:name=".ui.CadastroRepresentante" />
        <activity android:name=".ui.ActAgenda" />
        <activity
            android:name=".ui.ActRepresentante"
            android:label="@string/title_activity_act_representante" />
        <activity android:name=".ui.MenuPrincipal" />
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".firebase.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>