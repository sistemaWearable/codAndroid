<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.MenuPrincipal">

    <TextView
        android:id="@+id/menu_principal_lblConectado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Há um dipositivo conectado" />

    <ImageButton
        android:id="@+id/menu_principal_btnAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@mipmap/img_relogio_agenda"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/menu_principal_lblConectado"
        app:layout_constraintStart_toStartOf="@+id/menu_principal_lblConectado"
        app:layout_constraintTop_toBottomOf="@+id/menu_principal_lblConectado" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cadastro de Agenda"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_principal_btnAgenda"
        app:layout_constraintStart_toStartOf="@+id/menu_principal_btnAgenda"
        app:layout_constraintTop_toBottomOf="@+id/menu_principal_btnAgenda" />

    <ImageButton
        android:id="@+id/menu_principal_btnRepresentante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@mipmap/img_representante"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cadastro de Representante"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_principal_btnRepresentante"
        app:layout_constraintStart_toStartOf="@+id/menu_principal_btnRepresentante"
        app:layout_constraintTop_toBottomOf="@+id/menu_principal_btnRepresentante" />

    <ImageButton
        android:id="@+id/menu_principal_imgGraficoBarras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@mipmap/img_grafico_barras"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Estatísticas"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_principal_imgGraficoBarras"
        app:layout_constraintStart_toStartOf="@+id/menu_principal_imgGraficoBarras"
        app:layout_constraintTop_toBottomOf="@+id/menu_principal_imgGraficoBarras" />

</androidx.constraintlayout.widget.ConstraintLayout>